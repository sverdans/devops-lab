root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false
max_line_length = 120
tab_width = 4

[{*.cpp,*.cc,*.hpp,*.h}]
indent_style = tab
indent_size = 4

[{*.yml,*yaml,*.json}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2
max_line_length = 80
